<%unless cart.line_items.empty?%>

<h4>Mocks Cart</h4>

<table>
	<%= render(cart.line_items) %>

<tr class="total_line">
	<td colspan="2">Total</td>
	<td class="total_cell"><%= sprintf("R%0.02f", cart.total_price) %></td>
</tr>	
</table>

<div class="form-actions">
<%= button_to "Order Items", new_order_path, method: :get, class: 'btn btn-primary btn-sm'  %>
<%= button_to 'Empty Cart', cart, method: :delete,
    confirm: 'Are you sure', class: 'btn btn-danger btn-sm'  %>
	<% end %>	
</div>
